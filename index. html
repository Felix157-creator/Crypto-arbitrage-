            <div style="font-size: 12px; margin-top: 8px; opacity: 0.7;">Payment ID: CPT-' + currentUserEmail + '</div>
        </div>

        <div class="form-group">
            <label>Transaction Reference</label>
            <input type="text" id="depositRef" placeholder="Enter transaction ID">
        </div>

        <button class="btn-submit" onclick="processDeposit()">‚ö° CONFIRM DEPOSIT</button>
    </div>
</div>

<!-- Withdraw Modal -->
<div id="withdrawModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title">üí∏ Withdraw Funds</h2>
